FROM microsoft/dotnet:2.1-sdk AS source
WORKDIR /src
COPY /src/DemoCluster.DAL ./DemoCluster.DAL
COPY /src/DemoCluster.Configuration ./DemoCluster.Configuration
WORKDIR /DemoCluster.Configuration
RUN dotnet restore DemoCluster.Configuration.csproj

FROM source AS build
RUN dotnet build

FROM build AS publish
RUN dotnet publish -c Release -o ../../release

FROM microsoft/dotnet:2.1-aspnetcore-runtime AS runtime
WORKDIR /app
COPY --from=publish /release .
EXPOSE 80
ENTRYPOINT ["dotnet", "DemoCluster.Configuration.dll"]